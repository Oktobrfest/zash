# Ignore Mac system files
.DS_Store

# Ignore CakePHP core directories except for specific cases
/app/lib/Cake

# Do not ignore the index.php file in webroot
!app/webroot/index.php

# Ignore all files in webroot except custom uploads and index.php
/app/webroot/*
!/app/webroot/index.php
!/app/webroot/uploads/
!/app/webroot/uploads/.gitkeep

# Cache can be ignored
/app/webroot/cache/*

# Ignore Linux system file
.swp

# Ignore Windows thumbnail files
Thumbs.db

# Ignore logs and temp files, but keep the .gitkeep files
/logs/*
/tmp/*
/app/tmp/*
/app/logs/*
!logs/.gitkeep
!tmp/.gitkeep

# Ignore CakePHP core directories/files except for custom plugins
/lib/Cake/*
/app/Config/database.php
/app/Console/*
/app/Lib/*
/app/Locale/*
/app/Model/*
/app/View/*
/app/Test/*
/app/Vendor/*
!/app/Plugin/BoostCake/*
!/app/Plugin/Webzash/**

# Ignore Composer dependencies
/vendor/*
/composer.lock

# Ignore PHPUnit test results
/tests/*.xml
/tests/*.log
/tests/coverage/

# Ignore node_modules (if JavaScript is used)
node_modules/

# Ignore environment and configuration files
.env
.env.local
.env.*.local

# Ignore Docker-related files
/docker-sync.yml
/.docker/

# Ignore IDE specific files (JetBrains, VSCode, Sublime, etc.)
*.im
*.sublime-project
*.sublime-workspace

# Ignore editor swap files and backups
*.swp
*.bak
*.orig
*.save
*.tmp

# Ignore image assets unless they're part of the project
*.png
*.jpg
*.jpeg
*.gif

# Allow uploads folder but ignore its contents except for .gitkeep
/app/webroot/uploads/*
!/app/webroot/uploads/.gitkeep

# Ignore build files
/build.xml
/build.properties
